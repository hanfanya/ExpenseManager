<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<ImageView
        android:id="@+id/iv_choose_selected"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="16dp"/>-->
    <ImageView
        android:id="@+id/iv_choose_country"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="16dp" />
    <!--android:layout_toRightOf="@id/iv_choose_selected"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/iv_choose_country"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_choose_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_choose_cur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_choose_shown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:padding="16dp" />
</RelativeLayout>
