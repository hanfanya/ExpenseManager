<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.samuel.expensemanager.activity.ExchangeRateActivity"
    tools:showIn="@layout/activity_exchange_rate">

    <LinearLayout
        android:id="@+id/ll_exchange"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_currency"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:divider="@color/indigo" />

        <LinearLayout
            android:id="@+id/ll_exchange_cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/key_7"
                    style="@style/Calculator_Cell"
                    android:text="7" />

                <Button
                    android:id="@+id/key_4"
                    style="@style/Calculator_Cell"
                    android:text="4" />

                <Button
                    android:id="@+id/key_1"
                    style="@style/Calculator_Cell"
                    android:text="1" />

                <Button
                    android:id="@+id/key_point"
                    style="@style/Calculator_Cell"
                    android:text="." />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/key_8"
                    style="@style/Calculator_Cell"
                    android:text="8" />

                <Button
                    android:id="@+id/key_5"
                    style="@style/Calculator_Cell"
                    android:text="5" />

                <Button
                    android:id="@+id/key_2"
                    style="@style/Calculator_Cell"
                    android:text="2" />

                <Button
                    android:id="@+id/key_0"
                    style="@style/Calculator_Cell"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/key_9"
                    style="@style/Calculator_Cell"
                    android:text="9" />

                <Button
                    android:id="@+id/key_6"
                    style="@style/Calculator_Cell"
                    android:text="6" />

                <Button
                    android:id="@+id/key_3"
                    style="@style/Calculator_Cell"
                    android:text="3" />

                <Button
                    android:id="@+id/key_clear"
                    style="@style/Calculator_Cell"
                    android:text="del" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
