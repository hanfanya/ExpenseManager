<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MySearchView" parent="Base.Widget.AppCompat.SearchView">
        <item name="android:commitIcon">@drawable/ic_check</item>
        <item name="commitIcon">@drawable/ic_check</item>
    </style>


    <style name="SettingTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="MyTheme" parent="AppTheme.AppBarOverlay">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AdapterItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/keyline</item>
        <item name="android:paddingRight">@dimen/keyline_content_minus_keyline_2x</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="Calculator_Cell">
        <item name="android:textSize">28.0sp</item>
        <item name="android:textColor">@color/cal_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_key_state_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="Calculator_Cell_frame">
        <item name="android:background">@drawable/shape_key_state_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="Calculator_Cell_frame_tv">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_del</item>
        <item name="android:layout_width">40.0dip</item>
        <item name="android:layout_height">24.0dip</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

</resources>
